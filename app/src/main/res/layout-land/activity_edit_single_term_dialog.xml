<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    tools:context=".Pages.EditSingleTermDialogPage">


    <View
        android:id="@+id/divider35"
        android:layout_width="@dimen/dividerHeight"
        android:layout_height="match_parent"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        tools:context=".Pages.EditSingleTermDialogPage">


        <View
            android:id="@+id/divider31"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:layout_weight=".6"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editHiraganaLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toJapaneseText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/editHiraganaTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider240"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editEnglishLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toEnglishText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/editEnglishTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider250"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editKanjiLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toKanjiText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/editKanjiTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <View
            android:id="@+id/divider2142150"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editLessonLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lessonLabel"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <Spinner
                android:id="@+id/editLessonDropDownBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="@color/buttonColor"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/editTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/typeLabel"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <Spinner
                android:id="@+id/editTypeDropDownBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="@color/buttonColor"
                android:spinnerMode="dropdown" />

            <CheckBox
                android:id="@+id/editReqKanjiCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/checkBoxColor"
                android:checked="false"
                android:duplicateParentState="false"
                android:text="@string/addRequiredKanjiLabel"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider219"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelEditTermButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/cancelLabel"
                android:textColor="@color/buttonTextColor" />

            <Button
                android:id="@+id/confirmEditTermButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/submitButtonText"
                android:textColor="@color/buttonTextColor" />

        </LinearLayout>

        <View
            android:id="@+id/divider32"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:layout_weight=".6"
            android:background="@color/dividerColor" />

    </LinearLayout>

    <View
        android:id="@+id/divider37"
        android:layout_width="@dimen/dividerHeight"
        android:layout_height="match_parent"
        android:background="@color/dividerColor" />

</LinearLayout>