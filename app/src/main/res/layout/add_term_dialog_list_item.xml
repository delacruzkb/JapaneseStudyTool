<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:orientation="vertical">

        <View
            android:id="@+id/divider23"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/addTermLabelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toJapaneseText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/similarHiraganaTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="@dimen/addTermLabelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toEnglishText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/similarEnglishTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/addTermLabelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toKanjiText"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/similarKanjiTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider26"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lessonLabel"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/similarLessonTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/typeLabel"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/similarTypeTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <View
            android:id="@+id/divider27"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

        <TextView
            android:id="@+id/similarReqKanjiTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addRequiredKanjiLabel"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize" />

        <View
            android:id="@+id/divider21"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/dividerColor" />

    </LinearLayout>

    <Button
        android:id="@+id/deleteSimilarTermButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/buttonColor"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/deleteButtonText"
        android:textColor="@color/buttonTextColor" />

</LinearLayout>