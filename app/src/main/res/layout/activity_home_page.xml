<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pages.HomePage">

    <Button
        android:id="@+id/storyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/storyButtonLabel"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/flashCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/flashCardLabel"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addTermsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/addTermsLabel"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/editTermsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/editTermsLabel"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loadDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/loadDataLabel"
        android:textSize="10sp"
        android:textStyle="bold" />
</LinearLayout>