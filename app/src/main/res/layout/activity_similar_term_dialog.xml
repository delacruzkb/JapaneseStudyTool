<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".SimilarTermDialog">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/similaritiesTitle"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/titleTextSize" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/dividerColor" />

    <ListView
        android:id="@+id/similarTermListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/addTermListViewHeight" />

    <View
        android:id="@+id/divider18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelNewTermButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonColor"
            android:text="@string/cancelButtonText"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/proceedNewTermButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonColor"
            android:text="@string/addTermButton"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

</LinearLayout>