<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cofc.japanesestudytool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Pages.HomePage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.TermsMenuPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.AddTermsPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.EditTermsPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.FlashCardPage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Pages.StoryPage"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.SimilarTermsPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.EditTermsMenuPage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Pages.EditSingleTermDialogPage"
            android:theme="@style/AppTheme.customPopUpTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pages.KanjiWritingPage"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>